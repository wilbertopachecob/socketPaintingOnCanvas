{
  "name": "paintingoncanvas",
  "version": "1.0.0",
  "description": "Real-time collaborative painting canvas with Node.js and Socket.IO",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "cd server && npm install --production",
    "dev:client": "webpack serve --mode development",
    "test": "jest",
    "test:client": "jest --selectProjects client",
    "test:server": "jest --selectProjects server",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint server/ client/",
    "lint:fix": "eslint server/ client/ --fix",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop socket-painting-app",
    "pm2:restart": "pm2 restart socket-painting-app",
    "pm2:delete": "pm2 delete socket-painting-app",
    "pm2:logs": "pm2 logs socket-painting-app",
    "pm2:monit": "pm2 monit",
    "deploy:prod": "npm install && npm run build && pm2 reload ecosystem.config.js --env production",
    "setup:prod": "npm install && mkdir -p logs && npm run build && pm2 start ecosystem.config.js --env production"
  },
  "author": "Wilberto Pacheco Batista",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.27.1",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "babel-jest": "^29.7.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "supertest": "^6.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
